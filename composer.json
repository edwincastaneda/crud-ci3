{
	"description": "The CodeIgniter framework",
	"name": "codeigniter/framework",
	"type": "project",
	"license": "MIT",
	"require": {
		"php": ">=7.2.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.6"
	},
	"scripts": {
		"test:coverage": [
			"@putenv XDEBUG_MODE=coverage",
			"phpunit --color=always --coverage-text --configuration tests/Unit/YourTestClass.php"
		]
	}
}
